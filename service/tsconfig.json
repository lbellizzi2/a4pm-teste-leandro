{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "lib": ["ES7", "ESNext"],
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "strict": true,
    "isolatedModules": false,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "incremental": false
  },
  "include": [
    "src/**/*.ts",
    "test/modules/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}